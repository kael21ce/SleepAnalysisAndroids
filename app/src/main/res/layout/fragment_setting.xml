<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onsetText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingFragment">

    <LinearLayout
        android:id="@+id/SettingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--
        <Button
            android:id="@+id/timeSettingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue_1"
            android:text="Time setting button"
            app:cornerRadius="16dp" />
            -->

        <LinearLayout
            android:id="@+id/LoadDataView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_stroke"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/LoadDataTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/LoadDataTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/pretendardbold"
                    android:text="내 수면 데이터 불러오기"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/LoadDataDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="마지막 데이터 업데이트 " />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LoadDataCaption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/LoadDataButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/chevron_right" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ServiceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_stroke"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ServiceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ServiceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="24dp"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/pretendardbold"
                    android:text="약관 및 개인정보 처리방침 동의"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ServiceCaption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ServiceButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/chevron_right" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/VersionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_stroke"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/VersionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/VersionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/pretendardbold"
                    android:text="앱 버전"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/VersionDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="최신 버전" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/VersionCaption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/VersionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/chevron_right" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/OnsetView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_stroke"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/OnsetTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/OnsetTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginVertical="24dp"
                    android:fontFamily="@font/pretendardbold"
                    android:text="수면 시간 및 활동 시간 설정"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/OnsetCaption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/OnsetButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/chevron_right" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>