<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/SleepOnsetCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/SleepOnsetBackButton"
            style="@style/NoClickEffect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:padding="8dp"
            android:src="@drawable/chevron_left"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/SleepOnsetLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sleepOnsetTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="수면 및 근무 일정"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/sleepLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sleepSmallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/pretendardbold"
                    android:text="수면 일정"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/sleepSmallDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/pretendardvariable"
                    android:text="오늘 밤 잠자리에 들 수 있는 가장 이른 시각을 알려주세요"
                    android:textColor="@color/gray_4"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/sleepSettingView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/sleepOnsetSettingView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingRight="16dp">

                        <Button
                            android:id="@+id/sleepOnsetDateButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="8dp"
                            android:backgroundTint="@color/gray_1"
                            android:fontFamily="@font/pretendardvariable"
                            android:text="Oct 24, 2023"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/sleepOnsetTimeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/gray_1"
                            android:fontFamily="@font/pretendardvariable"
                            android:text="18:30 PM"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/workSmallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/pretendardbold"
                    android:text="근무 일정"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/workSmallDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/pretendardvariable"
                    android:text="내일 근무 혹은 활동 시간을 알려주세요"
                    android:textColor="@color/gray_4"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/workOnsetSettingView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/workOnsetText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardvariable"
                        android:text="시작"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/workOnsetDateButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:backgroundTint="@color/gray_1"
                        android:fontFamily="@font/pretendardvariable"
                        android:text="Oct 24, 2023"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/workOnsetTimeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/gray_1"
                        android:fontFamily="@font/pretendardvariable"
                        android:text="18:30 PM"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/workOffsetSettingView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/workOffsetText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardvariable"
                        android:text="종료"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/workOffsetDateButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:backgroundTint="@color/gray_1"
                        android:fontFamily="@font/pretendardvariable"
                        android:text="Oct 24, 2023"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/workOffsetTimeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/gray_1"
                        android:fontFamily="@font/pretendardvariable"
                        android:text="21:45 PM"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/sleepSettingSubmitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@color/blue_1"
                android:fontFamily="@font/pretendardvariable"
                android:text="업데이트"
                android:textColor="@color/white"
                android:visibility="visible"
                app:cornerRadius="28dp"
                tools:visibility="visible" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>