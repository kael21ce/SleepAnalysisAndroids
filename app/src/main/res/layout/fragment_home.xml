<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="@color/black"
    tools:context=".HomeFragment">

    <ScrollView
        android:id="@+id/HomeScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_1">

        <LinearLayout
            android:id="@+id/HomeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/SurveyUpperView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/corner_8_white"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="16dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/SurveyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--
                    <TextView
                        android:id="@+id/surveyTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardbold"
                        android:text="추천이 마음에 들지 않나요?"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                        -->

                    <TextView
                        android:id="@+id/surveyDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardbold"
                        android:text="\userName님의 현재 상태를 알려주세요"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/SurveryButtonCaption"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/surveyUpperButton"
                        style="@style/NoClickEffect"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/chevron_right" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/homeNoDataView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:background="@drawable/corner_16"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/homeNoDataCaption"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/pretendardbold"
                        android:text="수면 추천"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:id="@+id/rightRecommendCaption"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/toRecommendButton"
                            style="@style/NoClickEffect"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/chevron_right" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/homeNoDataDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:fontFamily="@font/pretendardvariable"
                    android:layout_marginTop="4dp"
                    android:text="추천 수면 탭으로 이동하여 시작해보세요"
                    android:textColor="@color/gray_4"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/no_data_home"
                    android:layout_width="177dp"
                    android:layout_height="177dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="48dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/RecommendHomeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/corner_16"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ClockCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ClockTitleView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardbold"
                        android:text="수면 추천"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/ClockInfoButton"
                        style="@style/NoClickEffect"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginLeft="8dp"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/info" />

                    <LinearLayout
                        android:id="@+id/ClockButtonCaption"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/ClockOnsetButton"
                            style="@style/NoClickEffect"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/chevron_right" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ClockView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/clock_background"
                    android:orientation="vertical">

                    <com.kael21ce.sleepanalysisandroid.ClockView
                        android:id="@+id/sweepingClockHome"
                        android:layout_width="280dp"
                        android:layout_height="280dp" />
                </LinearLayout>

                <!--Buttons for changing time-->
                <LinearLayout
                    android:id="@+id/ClockButtonHomeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="24dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/sleepButtonHome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/corner_8"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/moon_flip"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/napButtonHome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/corner_8"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sun_gray"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/workButtonHome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/corner_8"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/building"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

                <!--Time and suggestion displaying-->
                <LinearLayout
                    android:id="@+id/TimeDisplayingView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/TimeDisplayingTitleView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sleepImprotanceHomeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/important_caption"
                            android:fontFamily="@font/pretendardvariable"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:text="중요"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/sleepTypeHomeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:fontFamily="@font/pretendardbold"
                            android:text="밤잠"
                            android:textColor="@color/black"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/TimeDisplayingTextHomeView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/StartTimeHome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:text="7:15 PM"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:src="@drawable/caret_right" />

                        <TextView
                            android:id="@+id/EndTimeHome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:text="3:10 AM"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/TextDisplayingHomeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/corner_8"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/StateDescriptionHomeImage"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/sleep" />

                    <LinearLayout
                        android:id="@+id/StateDescriptioinHomeCaption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/StateDescriptionHomeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardbold"
                            android:text="잠을 자기 좋은 시간이에요"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/StateDescriptionHomeSmallText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/pretendardbold"
                            android:text="기상시간을 지켜주세요"
                            android:textColor="@color/gray_4" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/AlertnessHomeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/corner_16"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/AlertnessTextButtonCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/AlertnessTextCaption2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/AlertnessRecommend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendardbold"
                                android:text="잠시 바람 쐬는 건 어때요?"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <ImageButton
                                android:id="@+id/AlertnessInfoButton"
                                style="@style/NoClickEffect"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_marginLeft="8dp"
                                android:backgroundTint="@color/white"
                                android:src="@drawable/info" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/AlertnessDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendardvariable"
                            android:text="\(userName)님의 각성도가 낮아요"
                            android:textColor="@color/black" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/GraphView"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="16dp"
                    android:background="@drawable/corner_16"
                    android:backgroundTint="@color/white"
                    android:orientation="vertical">

                    <!--Graph showing alertness-->
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/alertnessChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/AlertnessTextCaption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/corner_8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/AlertnessWarningCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/warningIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/warning" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/AlertnessText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:fontFamily="@font/pretendardbold"
                            android:gravity="left"
                            android:maxLines="1"
                            android:text="10:42 이전에는 잠자리에 들기 어려울 수 있어요"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ChartHomeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:background="@drawable/corner_16"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ChartTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardbold"
                        android:text="주간 각성도"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/ChartInfoButton"
                        style="@style/NoClickEffect"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginLeft="8dp"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/info" />

                </LinearLayout>

                <TextView
                    android:id="@+id/ChartDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="@font/pretendardvariable"
                    android:text="\(userName)님의 일주일의 활동 시간을 요약했어요"
                    android:textColor="@color/black" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ChartRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="16dp"
                    android:paddingHorizontal="8dp" />

                <TextView
                    android:id="@+id/SummaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:fontFamily="@font/pretendardvariable"
                    android:padding="4dp"
                    android:text="자세히 보기"
                    android:textColor="@color/gray_4"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/ChartTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginBottom="24dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ChartPositiveLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/PositiveTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/positiveImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/alertness_high" />

                                <TextView
                                    android:id="@+id/positiveText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="4dp"
                                    android:fontFamily="@font/pretendardvariable"
                                    android:text="집중하기 좋은"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/positiveTimeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="8dp"
                                android:fontFamily="@font/pretendardbold"
                                android:text="--시간 --분"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:id="@+id/PositiveNumberLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/positiveImage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/arrow_down" />

                                <TextView
                                    android:id="@+id/positiveNumberText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/pretendardvariable"
                                    android:text="-%"
                                    android:textColor="@color/red_1"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ChartNegativeLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/NegativeTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/negativeImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/alertness_low" />

                                <TextView
                                    android:id="@+id/negativeText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="4dp"
                                    android:fontFamily="@font/pretendardvariable"
                                    android:text="집중이 어려운"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/negativeTimeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="8dp"
                                android:fontFamily="@font/pretendardbold"
                                android:text="--시간 --분"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:id="@+id/NegativeNumberLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/negativeImage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/arrow_up" />

                                <TextView
                                    android:id="@+id/negativeNumberText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/pretendardvariable"
                                    android:text="-%"
                                    android:textColor="@color/green_1"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--Good and bad sleep duration-->
            <LinearLayout
                android:id="@+id/SleepChartHomeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/corner_16"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/SleepChartTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendardbold"
                        android:text="주간 수면 평가"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/SleepChartInfoButton"
                        style="@style/NoClickEffect"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginLeft="8dp"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/info" />
                </LinearLayout>

                <TextView
                    android:id="@+id/SleepChartDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="@font/pretendardvariable"
                    android:text="\(userName)님의 일주일의 수면 시간을 요약했어요"
                    android:textColor="@color/black" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/SleepChartRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="16dp"
                    android:paddingHorizontal="8dp" />

                <TextView
                    android:id="@+id/SleepSummaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:fontFamily="@font/pretendardvariable"
                    android:padding="4dp"
                    android:text="자세히 보기"
                    android:textColor="@color/gray_4"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/SleepChartTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginBottom="24dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/SleepChartPositiveLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/SleepPositiveTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/sleepPositiveImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/good_sleep" />

                                <TextView
                                    android:id="@+id/sleepPositiveText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="4dp"
                                    android:fontFamily="@font/pretendardvariable"
                                    android:text="잠들기 좋은"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/sleepPositiveTimeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="8dp"
                                android:fontFamily="@font/pretendardbold"
                                android:text="--시간 --분"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:id="@+id/SleepPositiveNumberLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/sleepPositiveImage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/arrow_down" />

                                <TextView
                                    android:id="@+id/sleepPositiveNumberText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/pretendardvariable"
                                    android:text="-%"
                                    android:textColor="@color/red_1"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/SleepChartNegativeLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/SleepNegativeTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/sleepNegativeImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/bad_sleep" />

                                <TextView
                                    android:id="@+id/sleepNegativeText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="4dp"
                                    android:fontFamily="@font/pretendardvariable"
                                    android:text="잠들기 어려운"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/sleepNegativeTimeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="8dp"
                                android:fontFamily="@font/pretendardbold"
                                android:text="--시간 --분"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:id="@+id/SleepNegativeNumberLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/sleepNegativeImage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/arrow_up" />

                                <TextView
                                    android:id="@+id/sleepNegativeNumberText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/pretendardvariable"
                                    android:text="-%"
                                    android:textColor="@color/green_1"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--Send data-->
            <Button
                android:id="@+id/sendDataButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@color/blue_1"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="68dp"
                android:fontFamily="@font/pretendardvariable"
                android:text="데이터 전송"
                android:textSize="16sp"
                android:padding="16dp"
                android:textColor="@color/white"
                app:cornerRadius="28dp"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>